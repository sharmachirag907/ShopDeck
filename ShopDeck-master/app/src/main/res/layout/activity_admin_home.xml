<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHome">

    <TextView
        android:id="@+id/Admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textColor="@color/black"
        android:background="@color/blue"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        />


    <TextView
        android:id="@+id/selectAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/Admin"
        android:text="Select Action :"
        android:layout_marginLeft="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />




    <Button
        android:id="@+id/addProduct"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/selectAction"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"
        android:text="Add Product"
        android:textSize="30dp"
        android:textAllCaps="false"/>



    <Button
        android:id="@+id/maintain"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/addProduct"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"
        android:text="Maintain Products"
        android:textSize="30dp"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/check_orders"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/maintain"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"
        android:text="Check New Orders"
        android:textSize="30dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/check_feedbacks"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/check_orders"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttons"
        android:text="Check Feedbacks"
        android:textSize="30dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/admin_logout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/buttons"
        android:text="Logout"
        android:textSize="30dp"
        android:textStyle="bold|italic"/>

</RelativeLayout>