<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_ProductCategory">

    <TextView
        android:id="@+id/categoryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Product"
        android:textColor="@color/black"
        android:background="@color/blue"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        />

    <TextView
        android:id="@+id/selectcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Select category :"
        android:layout_marginLeft="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />



    <Button
        android:id="@+id/fruits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/selectcategory"
        android:background="@drawable/buttons"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:textAllCaps="false"
        android:text="Fruits"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        />

    <Button
        android:id="@+id/grocery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fruits"
        android:background="@drawable/buttons"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:textAllCaps="false"
        android:text="Grocery"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        />

    <Button
        android:id="@+id/chocolates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/grocery"
        android:background="@drawable/buttons"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:textAllCaps="false"
        android:text="Chocolates"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        />

    <Button
        android:id="@+id/stationaries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/chocolates"
        android:background="@drawable/buttons"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp"
        android:textAllCaps="false"
        android:text="Stationaries"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        />

    <Button
        android:id="@+id/adminHome"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttons"
        android:text="Admin Home"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textAllCaps="false"/>
</RelativeLayout>